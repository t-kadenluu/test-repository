@{
    ViewData["Title"] = "Dashboard";
}

<div class="row">
    <div class="col-md-12">
        <h1 class="display-4">Admin Dashboard</h1>
        <p class="lead">Welcome to the Enterprise Application Admin Portal</p>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-3">
        <div class="card text-white bg-primary">
            <div class="card-header">Total Users</div>
            <div class="card-body">
                <h4 class="card-title">1,234</h4>
                <p class="card-text">Active users in the system</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-success">
            <div class="card-header">Total Orders</div>
            <div class="card-body">
                <h4 class="card-title">5,678</h4>
                <p class="card-text">Orders processed this month</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-info">
            <div class="card-header">Revenue</div>
            <div class="card-body">
                <h4 class="card-title">$123,456</h4>
                <p class="card-text">Total revenue this month</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-warning">
            <div class="card-header">Pending</div>
            <div class="card-body">
                <h4 class="card-title">42</h4>
                <p class="card-text">Items requiring attention</p>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5>Recent Activity</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Time</th>
                                <th>Action</th>
                                <th>User</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>10:30 AM</td>
                                <td>Order Created</td>
                                <td>john.doe@example.com</td>
                                <td><span class="badge bg-success">Completed</span></td>
                            </tr>
                            <tr>
                                <td>10:25 AM</td>
                                <td>User Registration</td>
                                <td>jane.smith@example.com</td>
                                <td><span class="badge bg-success">Completed</span></td>
                            </tr>
                            <tr>
                                <td>10:20 AM</td>
                                <td>Payment Processed</td>
                                <td>bob.johnson@example.com</td>
                                <td><span class="badge bg-success">Completed</span></td>
                            </tr>
                            <tr>
                                <td>10:15 AM</td>
                                <td>Order Cancelled</td>
                                <td>alice.wilson@example.com</td>
                                <td><span class="badge bg-warning">Cancelled</span></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5>System Status</h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <div class="d-flex justify-content-between">
                        <span>User Service</span>
                        <span class="badge bg-success">Online</span>
                    </div>
                </div>
                <div class="mb-3">
                    <div class="d-flex justify-content-between">
                        <span>Order Service</span>
                        <span class="badge bg-success">Online</span>
                    </div>
                </div>
                <div class="mb-3">
                    <div class="d-flex justify-content-between">
                        <span>Payment Service</span>
                        <span class="badge bg-success">Online</span>
                    </div>
                </div>
                <div class="mb-3">
                    <div class="d-flex justify-content-between">
                        <span>Database</span>
                        <span class="badge bg-success">Online</span>
                    </div>
                </div>
                <div class="mb-3">
                    <div class="d-flex justify-content-between">
                        <span>Cache</span>
                        <span class="badge bg-warning">Degraded</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
